{
  "ApiSettings": {
    "BaseUrl": "https://localhost:5000",
    "Timeout": 30,
    "RetryCount": 3
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "UI": {
    "Theme": "Light",
    "Language": "en-US",
    "AutoSave": true,
    "PageSize": 20
  }
}
